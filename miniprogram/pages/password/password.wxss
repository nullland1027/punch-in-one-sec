page {
    background-color: #eee;
    font-size: 30rpx;
  }
  .container {
    padding: 20rpx;
    box-sizing: border-box;
  }
  .top {
    width: 90%;
    margin: 20rpx auto;
    background-color: #fff;
    border-radius: 15rpx;
    box-shadow: 0 5rp 5rp #e9e9e9;
  }
  .one_list {
    padding: 0 20rpx;
    box-sizing: border-box;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: space-between
  }
  .x {
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
    background-color: #999;
    color: #fff;
    text-align: center;
    line-height: 34rpx;
    font-size: 24rpx;
    float: right;
  }
  .x_line {
    width: 100%;
    height: 1px;
    background-color: #eee;
  }
  .change{
    display: flex;
    align-items: center
  }
  .btn {
    margin: 0  auto;
    width: 40%;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    color: #fff;
    margin-top: 40rpx;
    background: linear-gradient(to right, #A3CA8B, #A3CA8B);
    border-radius: 50rpx;

  }
  .btn-class{   
  top: 5rpx;
  background: linear-gradient(to right, #789468, #789468);
  box-shadow:0px 0px 8px rgb(121, 120, 120) inset; 
  }