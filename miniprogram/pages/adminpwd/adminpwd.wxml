<!--pages/adminpwd/adminpwd.wxml-->
<view class='container'>
  <form>
    <view class='top'>
      <view class='one_list'>
        <view class='change'>
          <view class=''>旧密码：</view>
          <view>
            <input placeholder="请输入旧密码" maxlength='20' value="{{oldpassword}}" bindinput="cancel1"></input>
          </view>
        </view>
        <view class='x' bindtap="c1">✖</view>
      </view>
      <view class='x_line'></view>
      <view class='one_list'>
        <view class='change'>
          <view class=''>新密码：</view>
          <view>
            <input placeholder="请输入新密码" maxlength='20' value="{{newpassword}}"bindinput="cancel2"></input>
          </view>
        </view>
        <view class='x' bindtap="c2">✖</view>
      </view>
      <view class='x_line'></view>
      <view class='one_list'>
        <view class='change'>
          <view class=''>确认密码：</view>
        <view>
          <input placeholder="请再次输入新密码" maxlength='20' value="{{checkpassword}}"bindinput="cancel3"></input>
        </view>
      </view>
      <view class='x' bindtap="c3">✖</view>
      </view>
    </view>
    <view bindtap="submit">
        <view class='btn' hover-class="btn-class">确定</view>
    </view>
  </form>
</view>
<view>{{oldpassword}}</view>
<view>{{newpassword}}</view>
<view>{{checkpassword}}</view>
