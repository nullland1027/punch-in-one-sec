/* pages/date/date.wxss */
 .MYearShow-group{
width: 100%;
height: 60rpx;
display: flex;
justify-content: space-between;
margin: auto 10rpx;
}
.MYearShow-group .buttonimg{
  padding: 0;
  width:60rpx;
  height: 60rpx;
  border: none;
}
.MYearShow-group .buttonimg image{
  width: 60rpx;

}
.week{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  margin: 20rpx;
  border-radius: 10px;
  background-color:  #A3CA8B;
}
.Main-group{
    margin: 20rpx;
    padding: 10rpx;
    border-radius: 10px;
    background-color:  #A3CA8B;
}
.Main-group .columns{
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
}

.Main-group .columns .rows{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.Main-groups .columns .rows .cell{
  width: 84rpx;
  height: 88rpx;
  margin: 3rpx;
  text-align: center;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.btn {
  margin: 0  auto;
  width: 40%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  margin-top: 40rpx;
  background: linear-gradient(to right, #A3CA8B, #A3CA8B);
  border-radius: 50rpx;

}
.btn-class{   
top: 5rpx;
background: linear-gradient(to right, #789468, #789468);
box-shadow:0px 0px 8px rgb(121, 120, 120) inset; 
}